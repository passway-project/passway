{
  "name": "@passway/project",
  "version": "0.0.0",
  "description": "Authentication component for Passway",
  "scripts": {
    "build": "dotenvx run -f .env -- docker compose up --build --no-start",
    "start": "dotenvx run -f .env -- docker compose up --detach",
    "start:dev": "dotenvx run -f .env -- docker compose -f compose.yml -f compose.dev.yml up --detach",
    "stop": "docker compose down",
    "destroy": "docker compose down --volumes",
    "restart": "npm run stop && npm start",
    "format": "prettier \"**/*.{ts,js,mjs}\" --write",
    "lint": "npm run auth -- npx eslint",
    "test": "npm run auth -- npm test",
    "test:watch": "npm run auth -- npm test -- --watchAll",
    "prepare": "husky && npm run build && npm start && npm run db:migrate:dev",
    "auth": "docker compose exec auth",
    "db:migrate:dev": "npm run auth -- npx prisma migrate dev",
    "db:migrate:prod": "npm run auth -- npx prisma migrate deploy",
    "db:generate:artifacts": "npm run auth -- npx prisma generate",
    "enter:auth": "npm run auth -- /bin/sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/passway-project/passway.git"
  },
  "author": "",
  "license": "BUSL-1.1",
  "bugs": {
    "url": "https://github.com/passway-project/passway/issues"
  },
  "homepage": "https://github.com/passway-project/passway#readme",
  "devDependencies": {
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "pretty-quick": "^4.0.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^0.45.0"
  }
}
